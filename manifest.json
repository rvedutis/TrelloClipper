{
    "manifest_version": 2,
    "name": "Trello Web Clipper",
    "description": "Clip the web into Trello",
    "version": "0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ]
}